<h1>{{model.title}}</h1>
<small class="u-medGrayTxt">
  {{#with model.author as |author|}}
    <span class="author">by <strong>{{author.name}}</strong></span>&nbsp;
  {{/with}}
  <span class="date">({{moment-from-now model.date}})</span>
</small>

<hr>

{{#if model.excerpt}}
  <div class="intro u-serif">
    {{markdown-to-html markdown=model.excerpt}}
  </div>
{{/if}}
{{#if model.body}}
  <div class="below-the-fold u-serif">
    {{markdown-to-html markdown=model.body}}
  </div>
{{/if}}

{{outlet "comments"}}
